{
	"manifest_version":2,
	"name":"Dark/Light mode",
	"description":"dark mode to light mode",
	"version":"1.0.0",
	"background":{
		"scripts":[
			"script.js"
		],
		"persistent":true
	},

	
	"browser_action":{
		"default_title":"Dark/Light mode",
		"default_popup":"index.html"
	},
	"permissions":[
		"https://*/*",
		"http://*/*",
		"tabs"
	]
}

